<div class="container mt-4">
    <div class="card mb-4">
      <div class="card-body">
        <h2 class="card-title">Your Question:</h2>
        <p class="card-text"><%= @question %></p>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Coach's Answer:</h2>
        <p class="card-text"><%= @answer %></p>
      </div>
    </div>

    <%= link_to "Ask Another Question", "/ask", class: "btn btn-warning mt-3" %>
</div>
